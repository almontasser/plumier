		"reflect-metadata": "^0.1.12",
		"rimraf": "^2.6.2",
		"tslint": "^5.10.0",
		"typescript": "^2.9.2",
		"typestrict": "^0.0.9"
	},
	"workspaces": [
		"packages/*"
	]
}
